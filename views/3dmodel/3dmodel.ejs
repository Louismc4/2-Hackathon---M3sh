            var nodePolygons = 64;
            var nodeScale = 0.25;
            var camSpeed = 10;
            var sceneRadius = 500;
            var updateDelay = 1000;
            
            var views = [
                    {
                        left: 0,
                        top: 0.5,
                        width: 0.325,
                        height: 0.5,
                        background: new THREE.Color(0, 0, 0),
                        eye: [1900, 0, 0],
                        up: [0, 1, 0],
